<% provide(:title, "Edit Project") %>

<h1>Edit "<%= @project.name %>"</h1>

<%= form_with(model: @project, local: true) do |f| %>
  <%= f.label :name %>
  <br />
  <%= f.text_field :name %><br />
  <br />

  <%= f.label :description %>
  <br />
  <%= f.text_area :description %><br />
  <br />

  <%= f.submit 'Save changes', class: 'btn btn-primary' %>
  <%= link_to 'Delete Project', project_path, method: :delete, data: { confirm: 'Are you sure you want to delete this project? This action cannot be undone.' }, class: 'btn btn-danger' %>
<% end %>