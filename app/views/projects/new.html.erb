<% provide(:title, 'New Project') %>
<h1>New Project</h1>

<%= form_with(model: @project, local: true) do |f| %>
  <%= f.label :name %>
  <br />
  <%= f.text_field :name %>
  <br />
  <br />

  <%= f.label :description %>
  <br />
  <%= f.text_area :description %>
  <br />
  <br />

  <%= f.submit 'Create Project', class: 'btn btn-primary' %>
  <%= link_to 'Back', :back, class: 'btn btn-outline-secondary' %>
<% end %>
