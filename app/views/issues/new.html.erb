<% provide(:title, 'New Issue') %>
<h1>New Issue for "<%= @project.name %>"</h1>

<%= form_with(model: @issue, scope: :issue, url: '/issues', method: 'post', local: true) do |f| %>
  <%= f.label :title %>
  <br />
  <%= f.text_field :title %>
  <br />

  <%= f.label :description %>
  <br />
  <%= f.text_area :description %>
  <br />

  <%= f.label :category %>
  <br />
  <%= f.select :category, %w[requirements design development bugfix testing documentation] %>
  <br />

  <%= f.label :priority %>
  <br />
  <%= f.select :priority, %w[minor normal major critical] %>
  <br />
  <br />

  <%= f.label :project_id %>
  <br />
  <%= f.number_field :project_id, value: @project.id, readonly: true %>
  <br />
  <br />

  <%= f.submit 'Create Issue', class: 'btn btn-primary' %>
  <%= link_to 'Back', :back, class: 'btn btn-outline-secondary' %>
<% end %>